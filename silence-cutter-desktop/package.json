{
  "name": "silence-cutter-desktop",
  "version": "1.0.0",
  "description": "Electron-based silence remover for audio/video",
  "main": "main.js",
  "author": "Ofir Gaash",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "dist:release": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "prettier": "3.5.3",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "wav-decoder": "^1.3.0",
    "wav-encoder": "^1.3.0",
    "wavesurfer.js": "^6.6.4"
  },
  "build": {
    "appId": "com.ofirgaash.silenceremover",
    "productName": "Silence Cutter",
    "asar": true,
    "files": [
      "main.js",
      "electron-logic.js",
      "preload.js",
      {
        "from": "../app/dist",
        "to": "app",
        "filter": ["**/*"]
      }
    ],
    "extraResources": [
      {
        "from": "bin/ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
